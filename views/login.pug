extends layout 

block content 
    div.row.wrap
        div.col-lg-4
            h1!= title 
            p Enter your credentials to log-in.
        div.col
            if errors 
                ul.list-group.list-group-flush 
                    each error in errors 
                        li.list-group-item.list-group-item-danger.my-1!= error.msg

            form(action="/login" method="post") 
                div.mb-3
                    label.form-label(for="username") Username: 
                    input#username.form-control(type="text" name="username" value=(username ? username : '') required)
                div.mb-3
                    label.form-label(for="password") Password: 
                    input#password.form-control(type="password" name="password" required)
                div.mb-3
                    input.btn.btn-primary(type="submit" value="Log-In")  

        div.col-sm-2