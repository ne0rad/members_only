doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
      crossorigin="anonymous")
    script(
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
      crossorigin="anonymous" defer)
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-sm.navbar-light.bg-light.shadow.fixed-top
      div.container-fluid
        a.navbar-brand(href='/') Members Only
        button.navbar-toggler(
          type="button" 
          data-bs-toggle="collapse" 
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded!=false
          aria-label="Toggle Navigation"
          )
          span.navbar-toggler-icon

        div.collapse.navbar-collapse#navbarSupportedContent

          ul.navbar-nav.ms-2.nav-fill
            li.nav-item
              a.nav-link(href="/") Home
            li.nav-item
              a.nav-link(href="/about") About

          if user 
            ul.nav.nav-pills.nav-fill.ms-auto
              li.nav-item.me-1.text-center
                div.container-fluid.mt-2
                  span.navbar-text Logged in: #[strong !{user.username}]
              li.nav-item 
                a.nav-link.active(href='/logout') Logout
            
          else
            ul.nav.nav-pills.nav-fill.ms-auto
              li.nav-item 
                a.nav-link(href="/signup") Sign-Up
              li.nav-item 
                a.nav-link.active(href="/login") Log-In

    div.container.spacer-top
      block content
