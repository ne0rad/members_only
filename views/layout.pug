doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    script(src="/js/bootstrap.min.js" defer) 
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light 
      div.container-fluid

        button.navbar-toggler(
          type="button" 
          data-bs-toggle="collapse" 
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded!=false
          aria-label="Toggle Navigation"
          )
          span.navbar-toggler-icon

        div.collapse.navbar-collapse#navbarSupportedContent

          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item.active
              a.nav-link(href="/" aria-current="page") Home
            if user
              li.nav-item 
                a.nav-link(href="/board") Message Board

          if user 
            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              li.nav-item 
                a.btn.btn-primary.m-1(href='/users/logout') Logout
            
          else
            ul.navbar-nav.ms-auto.mb-2.mb-lg-0
              li.nav-item 
                a.btn.btn-primary.m-1(href="/users/signup") Sign-Up
              li.nav-item 
                a.btn.btn-primary.m-1(href="/users/login") Log-In

    div.container-fluid
      block content
