doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet' href='/css/bootstrap.min.css')
    script(src="/js/bootstrap.min.js" defer) 
  body
    nav.navbar.navbar-expand-sm.navbar-light.bg-light
      div.container-fluid
        a.navbar-brand(href='/') Members Only
        button.navbar-toggler(
          type="button" 
          data-bs-toggle="collapse" 
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded!=false
          aria-label="Toggle Navigation"
          )
          span.navbar-toggler-icon

        div.collapse.navbar-collapse#navbarSupportedContent

          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/") Home
            if user
              li.nav-item
                a.nav-link(href="/member") Membership
            li.nav-item
              a.nav-link(href="/about") About

          if user 
            ul.nav.nav-pills.nav-fill.ms-auto.mb-2.mb-lg-0
              li.nav-item 
                a.nav-link.active(href='/logout') Logout
            
          else
            ul.nav.nav-pills.nav-fill.ms-auto.mb-2.mb-lg-0
              li.nav-item 
                a.nav-link(href="/signup") Sign-Up
              li.nav-item 
                a.nav-link.active(href="/login") Log-In

    div.container.mt-3
      block content
